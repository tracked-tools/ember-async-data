{
  "name": "ember-async-data",
  "version": "0.7.0",
  "private": true,
  "repository": "https://github.com/chriskrycho/ember-async-data",
  "license": "MIT",
  "author": {
    "name": "Chris Krycho",
    "email": "hello@chriskrycho.com",
    "url": "https://v5.chriskrycho.com/"
  },
  "workspaces": [
    "ember-async-data",
    "test-app"
  ],
  "scripts": {
    "lint": "yarn workspaces run lint",
    "lint:fix": "yarn workspaces run lint:fix",
    "prepare": "cd ember-async-data && yarn build",
    "release": "release-it",
    "test": "cd test-app && yarn test:ember"
  },
  "devDependencies": {
    "@release-it-plugins/lerna-changelog": "^5.0.0",
    "@release-it-plugins/workspaces": "^3.2.0",
    "release-it": "^15.5.0"
  },
  "volta": {
    "node": "14.21.1",
    "yarn": "1.22.19"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "hooks": {
      "before:init": "cp README.md LICENSE.md ember-async-data/"
    },
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": false
      },
      "@release-it-plugins/workspaces": {
        "workspaces": [
          "ember-async-data"
        ],
        "additionalManifests": {
          "dependencyUpdates": [
            "test-app/package.json"
          ],
          "versionUpdates": [
            "package.json",
            "test-app/package.json"
          ]
        }
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}",
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  }
}
