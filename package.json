{
  "name": "ember-async-data",
  "version": "1.0.3",
  "private": true,
  "repository": "https://github.com/chriskrycho/ember-async-data",
  "license": "MIT",
  "author": {
    "name": "Chris Krycho",
    "email": "hello@chriskrycho.com",
    "url": "https://v5.chriskrycho.com/"
  },
  "workspaces": [
    "ember-async-data",
    "test-app"
  ],
  "scripts": {
    "build": "yarn workspace ember-async-data run build",
    "lint": "yarn workspaces run lint",
    "lint:fix": "yarn workspaces run lint:fix",
    "prepare": "yarn build",
    "release": "release-it",
    "start": "concurrently 'npm:start:*' --restart-after 5000 --prefix-colors cyan,white,yellow",
    "start:addon": "yarn workspace ember-async-data run start",
    "start:test-app": "yarn workspace test-app run start",
    "test": "yarn workspaces run test"
  },
  "devDependencies": {
    "@release-it-plugins/lerna-changelog": "^6.0.0",
    "@release-it-plugins/workspaces": "^4.0.0",
    "concurrently": "^8.2.0",
    "release-it": "^16.1.4"
  },
  "volta": {
    "node": "18.15.0",
    "yarn": "1.22.19"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "hooks": {
      "before:init": "cp README.md LICENSE.md ember-async-data/"
    },
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      },
      "@release-it-plugins/workspaces": {
        "workspaces": [
          "ember-async-data"
        ],
        "additionalManifests": {
          "dependencyUpdates": [
            "test-app/package.json"
          ],
          "versionUpdates": [
            "package.json",
            "test-app/package.json"
          ]
        }
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}",
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  }
}
