{
  "name": "ember-async-data",
  "version": "1.0.3",
  "private": true,
  "repository": "https://github.com/chriskrycho/ember-async-data",
  "license": "MIT",
  "author": {
    "name": "Chris Krycho",
    "email": "hello@chriskrycho.com",
    "url": "https://v5.chriskrycho.com/"
  },
  "workspaces": [
    "ember-async-data",
    "test-app"
  ],
  "scripts": {
    "build": "pnpm run --filter=ember-async-data build",
    "lint": "pnpm run --filter=\"*\" lint",
    "lint:fix": "pnpm run --filter=\"*\" lint:fix",
    "prepare": "pnpm run build",
    "release": "release-it",
    "start": "concurrently 'pnpm:start:*' --restart-after 5000 --prefix-colors cyan,white,yellow",
    "start:addon": "pnpm run --filter=ember-async-data start",
    "start:test-app": "pnpm run --filter=test-app start",
    "test": "pnpm run --filter=test-app test"
  },
  "devDependencies": {
    "@release-it-plugins/lerna-changelog": "^6.1.0",
    "@release-it-plugins/workspaces": "^4.2.0",
    "concurrently": "^8.2.2",
    "release-it": "^16.3.0"
  },
  "volta": {
    "node": "18.20.7",
    "pnpm": "10.5.2"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "packageManager": "pnpm@10.5.2",
  "release-it": {
    "hooks": {
      "before:init": "cp README.md LICENSE.md ember-async-data/"
    },
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      },
      "@release-it-plugins/workspaces": {
        "workspaces": [
          "ember-async-data"
        ],
        "additionalManifests": {
          "dependencyUpdates": [
            "test-app/package.json"
          ],
          "versionUpdates": [
            "package.json",
            "test-app/package.json"
          ]
        }
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}",
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  }
}
